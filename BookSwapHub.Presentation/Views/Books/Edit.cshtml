@model BookSwapHub.Application.Models.CreateBookDto
@{
    ViewData["Title"] = "Edit Book";
}
<h2 class="mb-3"><i class="bi bi-pencil-square"></i> Edit Book</h2>
<form method="post" enctype="multipart/form-data" class="card shadow-sm p-3">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Author</label>
        <input asp-for="Author" class="form-control" required />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
    </div>
    <div class="row g-3">
        <div class="col-sm-4">
            <label class="form-label">Condition</label>
            <select asp-for="Condition" class="form-select" asp-items="Html.GetEnumSelectList<BookSwapHub.Application.Enums.BookCondition>()"></select>
        </div>
        <div class="col-sm-4">
            <label class="form-label">Category/Genre</label>
            <input asp-for="Category" class="form-control" placeholder="e.g. Fantasy" />
        </div>
        <div class="col-sm-4">
            <label class="form-label">Cover image</label>
            <input type="file" name="image" class="form-control" accept="image/*" />
        </div>
    </div>
    <div class="d-flex gap-2 mt-3">
        <button type="submit" class="btn btn-primary"><i class="bi bi-check2"></i> Save Changes</button>
        <a asp-action="Mine" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
