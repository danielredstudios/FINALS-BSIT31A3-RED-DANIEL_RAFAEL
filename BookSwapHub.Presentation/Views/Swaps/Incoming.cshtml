@model IEnumerable<BookSwapHub.Application.Models.SwapRequestDto>
@{
    ViewData["Title"] = "Incoming Swaps";
}
<h2>Incoming Swap Requests</h2>
<table class="table table-hover align-middle">
    <thead>
        <tr>
            <th>From User</th>
            <th>From Book Id</th>
            <th>To Book Id</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.FromUserId</td>
                <td>@r.FromBookId</td>
                <td>@r.ToBookId</td>
                <td>
                    <span class="badge bg-secondary">@r.Status</span>
                </td>
                <td class="text-end">
                    @if (r.Status == BookSwapHub.Application.Enums.SwapStatus.Pending)
                    {
                        <form asp-action="Respond" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@r.Id" />
                            <input type="hidden" name="decision" value="accept" />
                            <button class="btn btn-sm btn-success">Accept</button>
                        </form>
                        <form asp-action="Respond" method="post" class="d-inline ms-1">
                            <input type="hidden" name="id" value="@r.Id" />
                            <input type="hidden" name="decision" value="reject" />
                            <button class="btn btn-sm btn-outline-danger">Reject</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
