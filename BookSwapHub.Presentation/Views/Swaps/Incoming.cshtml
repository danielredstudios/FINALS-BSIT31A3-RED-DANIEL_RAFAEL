@model IEnumerable<BookSwapHub.Application.Models.SwapRequestDto>
@{
    ViewData["Title"] = "Incoming Swaps";
}
<h2 class="mb-3"><i class="bi bi-inbox"></i> Incoming Swap Requests</h2>
<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>From User</th>
            <th>From Book</th>
            <th>To Book</th>
            <th>Status</th>
            <th class="text-end">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td><span class="badge text-bg-light">@r.FromUserId[..Math.Min(8, r.FromUserId.Length)]â€¦</span></td>
                <td><strong>@r.FromBookTitle</strong> <span class="small-muted">(@r.FromBookAuthor)</span></td>
                <td><strong>@r.ToBookTitle</strong> <span class="small-muted">(@r.ToBookAuthor)</span></td>
                <td>
                    <span class="badge bg-secondary">@r.Status</span>
                </td>
                <td class="text-end">
                    @if (r.Status == BookSwapHub.Application.Enums.SwapStatus.Pending)
                    {
                        <form asp-action="Respond" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@r.Id" />
                            <input type="hidden" name="decision" value="accept" />
                            <button class="btn btn-sm btn-success"><i class="bi bi-check-lg"></i> Accept</button>
                        </form>
                        <form asp-action="Respond" method="post" class="d-inline ms-1">
                            <input type="hidden" name="id" value="@r.Id" />
                            <input type="hidden" name="decision" value="reject" />
                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-x-lg"></i> Reject</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
