@model IEnumerable<BookSwapHub.Application.Models.SwapRequestDto>
@{
    ViewData["Title"] = "Outgoing Swaps";
}
<h2 class="mb-3"><i class="bi bi-send"></i> Outgoing Swap Requests</h2>
<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>To User</th>
            <th>From Book</th>
            <th>To Book</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td><span class="badge text-bg-light">@r.ToUserId[..Math.Min(8, r.ToUserId.Length)]â€¦</span></td>
                <td><strong>@r.FromBookTitle</strong> <span class="small-muted">(@r.FromBookAuthor)</span></td>
                <td><strong>@r.ToBookTitle</strong> <span class="small-muted">(@r.ToBookAuthor)</span></td>
                <td>
                    <span class="badge bg-secondary">@r.Status</span>
                </td>
            </tr>
            @if (r.Status == BookSwapHub.Application.Enums.SwapStatus.Pending)
            {
                <tr>
                    <td colspan="4" class="text-end">
                        <form asp-action="Cancel" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@r.Id" />
                            <button class="btn btn-sm btn-outline-warning"><i class="bi bi-x-circle"></i> Cancel Request</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
